{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [ 
      "es2017", 
      "dom" 
    ],
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "**/*",
    "node_modules/@angular-addons/**/*.ts"
  ],
  "exclude": [
    "**/*-aot.ts",
    "node_modules/@angular/**/*.ts"
  ]
}
